# Emfit API Configuration
EMFIT_DEVICE_ID=your_device_id_here
EMFIT_TOKEN=your_api_token_here
# OR use username/password instead of token
# EMFIT_USERNAME=your_username
# EMFIT_PASSWORD=your_password

# IsolationForest Configuration (optional)
IFOREST_CONTAM=0.05
IFOREST_TRAIN_WINDOW=90
IFOREST_SHOW_N=5

# Pushover Notifications (optional)
PUSHOVER_APIKEY=your_pushover_api_key
PUSHOVER_USERKEY=your_pushover_user_key

# Caching Configuration (optional)
# Sleep data doesn't change once recorded, so cache is persistent by default
SLEEP_TRACKER_CACHE_DIR=./cache
SLEEP_TRACKER_CACHE_ENABLED=true
SLEEP_TRACKER_CACHE_TTL_HOURS=87600

OPENAI_API_KEY=your_api_key_here
